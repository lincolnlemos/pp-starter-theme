{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="article post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article--content">
				<div class="article--header">
					<h1 class="article--h1">{{post.title}}</h1>
				</div>
				<div class="article--body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}