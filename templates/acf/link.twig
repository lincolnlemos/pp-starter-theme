{# 
    link => [title,url,target]
    layout => (
        button => will not create anchor
        default => will create anchor
    )
#}

{% if link %}
    {% set layout = layout|default('default') %}
    {% set htmlTag = layout == 'button' ? 'span' : 'a' %}
    
    <{{ htmlTag }} 
        class="{{ data.class|default('btn') }} {{ layout == 'button' ? ' hover--pointer' }}" 
        title="{{ link.title }}"        
        
        {% if layout == 'default' %}
            {# Add href if is a link #}
            href="{{ link.url }}"
            {# Add target if is a link #}
            target="{{ link.target|default('_self') }}"
        {% endif %}
    >
        {{ link.title|default('Saiba Mais') }}
    </{{ htmlTag }}>
    
{% endif %}